
{% extends 'base.html.twig' %}

{% block title %}Categorie detail!{% endblock %}

{% block body %}
<body id="app-container" class="menu-default show-spinner">
{% include "includes/body_dash.html.twig" %}

 <main>
   
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="mb-2">
                        <h1>Categorie Details</h1>
                    
                    </div>
                    <div class="separator mb-5"></div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-12 col-xl-8 col-left">
                    <div class="card mb-4">
                        <div class="card-body">

                            <div class="glide details">
                                <div class="glide__track" data-glide-el="track">
                                    <ul class="glide__slides">
                                        <li class="glide__slide">
                                            <img alt="detail" src="uploads\brochures\{{categorie.image}}" alt="{{categorie.title}}"
                                                class="responsive border-0 border-radius img-fluid mb-3" />
                                        </li>
                                       
                                      
                                    
                                    </ul>
                                </div>
                            </div>

                            <div class="glide thumbs">
                                <div class="glide__track" data-glide-el="track">
                                    <ul class="glide__slides">
                                        <li class="glide__slide">
                                            <img alt="thumb" src="uploads\brochures\{{categorie.image}}" alt="{{categorie.title}}"
                                                class="responsive border-0 border-radius img-fluid" />
                                        </li>
                                       
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs " role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="first-tab" data-toggle="tab" href="#first" role="tab"
                                        aria-controls="first" aria-selected="true">Info de Categorie</a>
                                </li>
                           
                              
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="first" role="tabpanel"
                                    aria-labelledby="first-tab">
                                   <p class="mb-1 text-muted text-small">Nom de categorie</p>
                                    <p class="font-weight-bold">{{categorie.title}}</p>

                                    <p class="mb-1 text-muted text-small">Date  creation</p>
                                    <p class="font-weight-bold">{{categorie.createdAt | date('d/m/Y')}}</p>

                                    <p class="mb-1 text-muted text-small">description de categorie</p>
                                      <p class="font-weight-bold"> {{categorie.description}}</p>
                                    
                                </div>
                              
                            
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>
{% include "includes/footer.html.twig" %}
    <script src="js/scripts.js"></script>
</body>
{% endblock %}



 