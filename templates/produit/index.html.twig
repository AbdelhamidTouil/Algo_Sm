{% extends 'base.html.twig' %} {% block title %}List des produit!{% endblock %} {% block body %}

<body id="app-container" class="menu-default show-spinner">
   {% include "includes/body_dash.html.twig" %}
      <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <h1>List des produit</h1>
                 <div class="top-right-button-container">
                          <button data-toggle="modal" data-target="#exampleModal" class="btn btn-primary top-right-button mr-1" onclick="change('{{path('produit_create')}}')"> AJOUTER NOUVEAU </button>
                    
                        </div>
						     <div class="mb-2">
                        <a class="btn pt-0 pl-0 d-inline-block d-md-none" data-toggle="collapse" href="#displayOptions"
                            role="button" aria-expanded="true" aria-controls="displayOptions">
                            Display Options
                            <i class="simple-icon-arrow-down align-middle"></i>
                        </a>
                        <div class="collapse dont-collapse-sm" id="displayOptions">
                           
                            <div class="d-block d-md-inline-block">
                               
                                <div class="search-sm  d-inline-block float-md-left mr-1 mb-1 align-top">
                                    <input class="form-control datepicker" placeholder="Rechercher par nom">
                                </div>
                            </div>
                         
                        </div>
                    </div>
                    <div class="separator mb-5"></div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <table class="data-table data-table-scrollable responsive nowrap"
                                data-order="[[ 1, &quot;desc&quot; ]]">
                                <thead>
								
                                    <tr>
								     	<th>Image</th>
                                        <th>Titre</th>
                                        <th>quantity</th>
                                        <th>Categorie</th>
										<th>Action</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
								{% for produit in produit %}
								
                                    <tr>
								      	<td>
                                            <p class="text-muted"><img alt="{{produit.title}}" style="width:50px" src="uploads\brochures\{{produit.image}}"></p>
                                        </td>
                                        <td>
                                            <p class="list-item-heading">{{produit.title}}</p>
                                        </td>
										
                                        <td>
                                            <p class="text-muted">{{produit.quantity}}</p>
                                        </td>
                                        <td>
                                            <p class="text-muted">{{produit.categorie.title}}</p>
                                        </td>
                                       
									<td>
                                            <p class="list-item-heading">
                                                <div class="btn-group btn-group-sm  mr-2  mb-1" role="group"> <a class="btn  btn-primary" data-toggle="modal" data-target="#exampleModal" onclick="change('{{path('produit_edit',{id:produit.id})}}')"><i class="fas fa-edit"></i></a> <a href="{{path('produit_delete',{id:produit.id})}}"
                                                        class="btn  btn-danger" onclick="if(!confirm('Are you sure ?')) { return false; }"><i class="fas fa-trash-alt"></i></a>
                                                    <a href="{{path('produit_show',{id:produit.id})}}" class="btn  btn-warning"><i class="fas fa-eye"></i></a>
                                                </div>
                                            </p>
                                        </td>
                                    </tr>
									{% endfor %}
                                </tbody>
                            </table>
							  <nav class="mt-4 mb-3">
                        <ul class="pagination justify-content-center mb-0">
                           {{knp_pagination_render(produit)}}
                        </ul>
                    </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container-fluid-->
    </main>
 <!-- end main-->{% include "produit/create.html.twig" %} {% include "includes/footer.html.twig" %}
     <script src="js/changeUrl.js"></script>
     <script src="js/scripts.js"></script>
</body>{% endblock %}
