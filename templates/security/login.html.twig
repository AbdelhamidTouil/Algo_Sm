

{% extends 'base.html.twig' %}

{% block title %}Categorie detail!{% endblock %}

{% block body %}

<body class="background show-spinner no-footer">
    <div class="fixed-background"></div>
  <main>
			<div class="container">
				<div class="row h-100">
					<div class="col-12 col-md-10 mx-auto my-auto">
						<div class="card auth-card">
							<div class="position-relative image-side ">

								<p class=" text-white h2">GO SM</p>

								<p class="white mb-0">
									Veuillez utiliser vos informations d’identification pour vous connecter.
									<br>Si vous n’êtes pas membre, veuillez
									<a href="#" class="white">registre</a>.
								</p>
							</div>
							<div class="form-side">
								<a href="Dashboard.Default.html">
									<span class="logo-single"></span>
								</a>
								<h6 class="mb-4">Connexion</h6>

								<form method="post">
									{% if error %}
										<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
									{% endif %}

									{% if app.user %}
										<div class="mb-3">
											Vous êtes connecté en tant que
											{{ app.user.username }},
											<a href="{{ path('app_logout') }}">Déconnexion</a>
										</div>
									{% endif %}
									<label class="form-group has-float-label mb-4">
										<input type="email" value="{{last_username}}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus/>
										<span>E-mail</span>
									</label>


									<label class="form-group has-float-label mb-4">
										<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

										<span>Mot de passe</span>
									</label>

									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<div class="d-flex justify-content-between align-items-center">
										<a href="#">Vous avez oublié votre mot de passe ?</a>
										<button class="btn btn-lg btn-primary" type="submit">
											Connexion
										</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
    <script src="js/vendor/jquery-3.3.1.min.js"></script>
    <script src="js/vendor/bootstrap.bundle.min.js"></script>
    <script src="js/dore.script.js"></script>
    <script src="js/scripts.js"></script>
</body>
{% endblock %}
